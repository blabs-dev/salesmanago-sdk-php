{
  "name": "blabs/salesmanago-sdk-php",
  "description": "PHP Wrapper for Sales Manago API",
  "type": "library",
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.3",
    "spatie/data-transfer-object": "^3.7",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Salvo Bonanno",
      "email": "salvob.labs@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Blabs\\SalesManago\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blabs\\SalesManago\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "sort-packages": true
  }
}
